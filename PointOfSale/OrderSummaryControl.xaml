<UserControl x:Class="PointOfSale.OrderSummaryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" Height="532" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="225"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="2" Grid.RowSpan="1" TextAlignment="Left" FontSize="20" Background="SkyBlue" Text="{Binding Path=OrderNumber, StringFormat=d}"></TextBlock>
        <ListBox ItemsSource="{Binding Path=Items}" FontSize="14" Background="LightBlue" Grid.Row="1"/>
        <ListBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Path=Price}"/>
        <TextBox Grid.Row="3" FontSize="20" Text="Subtotal"/>
        <TextBox Grid.Row="2" Grid.Column="3" FontSize="20" Text="{Binding Path=Subtotal, StringFormat=c}"/>
    </Grid>
</UserControl>
