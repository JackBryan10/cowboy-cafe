<UserControl x:Class="PointOfSale.OrderSummaryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" d:DesignWidth="200" Height="532">
    <Grid>
        <StackPanel Grid.Column="3">
            <TextBlock Height="30" TextAlignment="Center" FontSize="20" Background="SkyBlue">Order</TextBlock>
            <ListBox ItemsSource="{Binding Path=Items}" Height="504" FontSize="12" Background="LightBlue">
            </ListBox>
        </StackPanel>
    </Grid>
</UserControl>
