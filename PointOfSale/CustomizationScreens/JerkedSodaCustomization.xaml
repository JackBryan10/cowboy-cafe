<UserControl x:Class="PointOfSale.CustomizationScreens.JerkedSodaCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.CustomizationScreens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <UserControl.Resources>
        <LinearGradientBrush x:Key="SkyBlueGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="DeepSkyBlue" Offset="0"/>
            <GradientStop Color="White" Offset="2"/>
        </LinearGradientBrush>
    </UserControl.Resources>

    <StackPanel Background="{StaticResource SkyBlueGradient}">
        <TextBlock FontSize="40" Text=" Jerked Soda Customization"></TextBlock>

        <StackPanel Orientation="Horizontal" Margin="15,5,0,0">
            <CheckBox IsChecked="{Binding Ice}" Margin="3">
                <CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="2" ScaleY="2" />
                </CheckBox.LayoutTransform>
            </CheckBox>
            <TextBlock Text="Ice" FontSize="25"/>
        </StackPanel>

        <TextBlock FontSize="30" Text="  Soda Flavor"></TextBlock>

        <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
            <RadioButton Name="CreamSodaButton" Click="IsClicked" Margin="3">
                <RadioButton.LayoutTransform>
                    <ScaleTransform ScaleX="2" ScaleY="2" />
                </RadioButton.LayoutTransform>
            </RadioButton>
            <TextBlock Text="Cream Soda" FontSize="25"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
            <RadioButton Name="OrangeSodaButton" Click="IsClicked" Margin="3">
                <RadioButton.LayoutTransform>
                    <ScaleTransform ScaleX="2" ScaleY="2" />
                </RadioButton.LayoutTransform>
            </RadioButton>
            <TextBlock Text="Orange Soda" FontSize="25"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
            <RadioButton Name="SarsparillaButton" Click="IsClicked" Margin="3">
                <RadioButton.LayoutTransform>
                    <ScaleTransform ScaleX="2" ScaleY="2" />
                </RadioButton.LayoutTransform>
            </RadioButton>
            <TextBlock Text="Sarsparilla" FontSize="25"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
            <RadioButton Name="BirchBeerButton" Click="IsClicked" Margin="3">
                <RadioButton.LayoutTransform>
                    <ScaleTransform ScaleX="2" ScaleY="2" />
                </RadioButton.LayoutTransform>
            </RadioButton>
            <TextBlock Text="Birch Beer" FontSize="25"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
            <RadioButton Name="RootBeerButton" Click="IsClicked" Margin="3">
                <RadioButton.LayoutTransform>
                    <ScaleTransform ScaleX="2" ScaleY="2" />
                </RadioButton.LayoutTransform>
            </RadioButton>
            <TextBlock Text="Root Beer" FontSize="25"/>
        </StackPanel>

        <TextBlock FontSize="30" Text="  Size"></TextBlock>

        <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
            <RadioButton Name="ButtonSmall" Click="IsClicked" Margin="3">
                <RadioButton.LayoutTransform>
                    <ScaleTransform ScaleX="2" ScaleY="2" />
                </RadioButton.LayoutTransform>
            </RadioButton>
            <TextBlock Text="Small" FontSize="25"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
            <RadioButton Name="ButtonMedium" Click="IsClicked" Margin="3">
                <RadioButton.LayoutTransform>
                    <ScaleTransform ScaleX="2" ScaleY="2" />
                </RadioButton.LayoutTransform>
            </RadioButton>
            <TextBlock Text="Medium" FontSize="25"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
            <RadioButton Name="ButtonLarge" Click="IsClicked" Margin="3">
                <RadioButton.LayoutTransform>
                    <ScaleTransform ScaleX="2" ScaleY="2" />
                </RadioButton.LayoutTransform>
            </RadioButton>
            <TextBlock Text="Large" FontSize="25"/>
        </StackPanel>
    </StackPanel>
</UserControl>